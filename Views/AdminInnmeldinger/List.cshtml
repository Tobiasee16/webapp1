@model List<Webapp1.Models.Domain.Innmelding>


    <div class="<bg-secondary> <bg-opacity-10> py-2">
    <div class="container">
        <h1>Alle Innmeldinger - Admin Functionality</h1>
    <div>
</div>

<div class="container py-5">
    <table class="table">
        <thead>
            <tr>
                <td>Id</td>
                <td>Heading</td>
                <td>Tags</td>
                <td></td>
            </tr>
        </thead>
        <tbody>
            @foreach (var innmelding in Model)
            {
                <tr>
                    <td>@innmelding.Id</td>
                    <td>@innmelding.Heading</td>
                    <td>
                        <div class="d-flex">
                            @foreach (var tag in innmelding.Tags)
                            {
                                <span class="badge bg-secondary me-1">@tag.Name</span>
                            }
                        </div>
                </td>
                <td>
                    <a asp-area=""
                    asp-controller="AdminInnmeldinger"
                    asp-action="Edit"
                    asp-route-itemid="@innmelding.Id">
                    Edit
                    </a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>